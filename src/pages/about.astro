---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`关于 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.about-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 2em 1em;
			}
			.about-header {
				text-align: center;
				margin-bottom: 3em;
			}
			.about-header h1 {
				font-size: 2.5em;
				margin: 0;
				color: #333;
			}
			.section {
				margin-bottom: 3em;
			}
			.section h2 {
				color: #333;
				border-bottom: 2px solid #667eea;
				padding-bottom: 0.3em;
				margin-bottom: 1em;
			}
			.section p {
				line-height: 1.8;
				color: #444;
				margin-bottom: 1em;
			}
			.skills {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				margin-top: 1em;
			}
			.skill-tag {
				background: #f0f0f0;
				padding: 0.3em 0.8em;
				border-radius: 4px;
				font-size: 0.9em;
				color: #555;
			}
			.contact {
				background: #f8f9fa;
				padding: 2em;
				border-radius: 8px;
				text-align: center;
			}
			.contact h2 {
				border-bottom: none;
				margin-bottom: 0.5em;
			}
			.contact p {
				margin-bottom: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="about-container">
				<header class="about-header">
					<h1>关于</h1>
				</header>

				<section class="section">
					<h2>关于我</h2>
					<p>
						这是我的个人博客。
					</p>
				</section>

				<section class="section">
					<h2>技术栈</h2>
					<div class="skills">
						<span class="skill-tag">VMware</span>
						<span class="skill-tag">Kubernetes</span>
						<span class="skill-tag">Docker</span>
						<span class="skill-tag">Terraform</span>
						<span class="skill-tag">Ansible</span>
						<span class="skill-tag">PowerShell</span>
						<span class="skill-tag">Python</span>
						<span class="skill-tag">Linux</span>
					</div>
				</section>

				<section class="section contact">
					<h2>联系</h2>
					<p>
						<a href="https://github.com/miniade">GitHub</a>
					</p>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>
